<div class="container">
  <div class="row">
    <h1>Show Cocktails</h1>
    <% @cocktails.each do |cocktail| %>
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('http://www.unsplash.it/700/300?image=123');">
        <div class="card-category"> <%= ["Best Cocktails", "Evergreen", "Bills Favorite"].sample %></div>
        <div class="card-description">
          <h2><%= cocktail.name %></h2>
        </div>
        <img class="card-user avatar" src="http://www.fillmurray.com/300/300">
        <a class="card-link" href=" <%= cocktail_path(cocktail) %>" ></a>

      </div>
    <% end %>

  </div>
</div>
