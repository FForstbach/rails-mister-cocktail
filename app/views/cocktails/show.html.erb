<div class="container">
  <div class="row">
  <h1><%= @cocktail.name %></h1>
    <div class="col-xs-12">
      <p>Ingredients</p>
      <p><%= @dose.description %></p>
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.input :description %>
        <%= f.association :ingredient %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
