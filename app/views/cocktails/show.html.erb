<div class="container">
  <div class="row">
  <h1 class="text-center"><%= @cocktail.name %></h1>
    <%= cl_image_tag @cocktail.photo, height: 200, width: 200, crop: :scale %>
    <div class="col-xs-12">
    <p>Ingredients</p
      <ul>
          <%  @cocktail.doses.all.each do |dose| %>
            <li><%= "#{dose.description} #{dose.ingredient.name}   " %><%= link_to "Delete", cocktail_dose_path(@cocktail,dose), method: :delete %></li>
          <% end %>
      </ul>

      <hr>
      <p>Add a new ingredient</p>
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.input :description %>
        <%= f.association :ingredient %>
        <%= f.submit "Save Ingredient", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
