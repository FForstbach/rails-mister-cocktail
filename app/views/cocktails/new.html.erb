<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>Create a New Cocktail</h1>
        <%= simple_form_for @cocktail do |f| %>
        <%= f.input :name, placeholder: "Type the name of the cocktail", input_html: {class: "form-control"} %>
        <%= f.submit :submit, input_html: {class: "btn btn-primary"} %>
      <% end %>
    </div>
  </div>
</div>
