<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>Create a New Cocktail</h1>
        <%= simple_form_for @cocktail do |f| %>
        <%= f.input :name %>
        <%= f.submit :submit, input_html: {class: "btn btn-danger"} %>
      <% end %>
    </div>
  </div>

  <%= link_to "See All Cocktails", cocktails_path, class: "btn" %>
</div>
